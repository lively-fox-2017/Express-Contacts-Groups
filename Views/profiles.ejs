<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Profiles</title>
  </head>
  <body>
    <h1>TABLE PROFILE</h1>
    <table border = "1">
      <thead>
        <tr>
          <th>ID</th>
          <th>USERNAME</th>
          <th>PASSWORD</th>
          <th>CONTACTS NAME</th>
        </tr>
      </thead>
      <tbody>
        <%data.forEach (row=> {%>
          <tr>
            <td><%= row.id%></td>
            <td><%= row.username%></td>
            <td><%= row.password%></td>
            <td><%= row.name%></td>
            <td>
              <a href="/profiles/edit/<%=row.id%>">EDIT</a>
              <a href="/profiles/delete/<%=row.id%>">DELETE</a>
            </td>
          </tr>
          <%})%>
        </tbody>
      </table>
      <h2>ADD PROFILE</h2>
      <form action="/profiles" method="post">
    User Name: <br>
    <input type="text" name="username">
    <br>
    Password: <br>
    <input type="text" name="password">
    <br>
    Name: <br>
    <select name="ContactId">
      <%for(let i=0; i< dataContacts.length; i++){%>
  <option value="<%=dataContacts[i].id%>"><%=dataContacts[i].name%></option>
  <%}%>
</select>
    <input type="submit" value="Submit">
  </form>
  <h3><%=errorMsg%></h3>
  <h4>Navigate to Another Path Here:</h4>
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/contacts">View Contacts Database</a></li>
    <li><a href="/groups">View Groups Database</a></li>
    <li><a href="/profiles">View Profiles Database</a></li>
    <li><a href="/addresses">View Addresses Database</a></li>
  </ul>
  </body>
</html>
