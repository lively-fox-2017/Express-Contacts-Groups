						<% for(let i = 0; i < dataCon.length; i++){ %>
							<option value="<%= dataCon[i].id %>"><%= dataCon[i].name %></option>
						<% } %>
					</select>
				</td>
			</tr>
			<tr>
				<td></td>
				<td>
					<input type="submit" value="Save">
				</td>
			</tr>
		</table>
	</form>

	<br>

	<a href="/groups"> << back to groups </a>
	
</body>
</html>