<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.5.3/css/bulma.min.css">
  <title>Contacts</title>
</head>
<body>     
  <section class="section">
    <div class="container">
      <nav class="breadcrumb is-right" aria-label="breadcrumbs">
        <ul>
          <li><a href='/'>Home</a></li>
          <li><a href="contacts">Contacts</a></li>
          <li><a href="groups">Groups</a></li> 
          <li><a href="addresses">Addresses</a></li>
          <li><a href="profiles">Profiles</a></li>
          <li class="is-active"><a href="addresses_with_contact"  aria-current="page">Address with Contacts</a></li>
        </ul>
      </nav>
      <br/>
      <form action="/addresses_with_contact" method="post" >
      <div class="tile is-ancestor">
          <div class="tile is-4 is-vertical is-parent">
            <div class="tile is-child box">
              <!-- FORM -->
              <div class="field-body">
                  <div class="field is-narrow">
                    <div class="control">
                      <div class="select is-fullwidth">
                          <select 
                          name='name'>
                            <% for(let data = 0; data < dataJsonContacts.length; data++) { %>
                            <option value='<%= dataJsonContacts[data].id %>'>
                            <%= dataJsonContacts[data].nama %></option> 
                            <%}%>
                          </select>
                      </div>
                    </div>
                  </div>
                </div>
                <br/>
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                      <input class="input" type="text" name="street" placeholder="Jalan">
                      <span class="icon is-small is-left">
                        <i class="fa fa-envelope"></i>
                      </span>
                      <span class="icon is-small is-right">
                        <i class="fa fa-check"></i>
                      </span>
                    </p>
                  </div>
                  <div class="field">
                      <p class="control has-icons-left has-icons-right">
                        <input class="input" type="text" name="city" placeholder="City">
                        <span class="icon is-small is-left">
                          <i class="fa fa-envelope"></i>
                        </span>
                        <span class="icon is-small is-right">
                          <i class="fa fa-check"></i>
                        </span>
                      </p>
                    </div>
                    <div class="field">
                        <p class="control has-icons-left has-icons-right">
                          <input class="input" type="text" name="zipcode" placeholder="Zip Code">
                          <span class="icon is-small is-left">
                            <i class="fa fa-envelope"></i>
                          </span>
                          <span class="icon is-small is-right">
                            <i class="fa fa-check"></i>
                          </span>
                        </p>
                      </div>
                      <div class="field">
                          <p class="control">
                          <button class="button is-success">
                              Simpan
                          </button>
                        </p>
                        </div>
            </div>
          </div>
          <div class="tile is-parent">
            <div class="tile is-child box">
            <!-- TABLE   -->
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Sreet</th>
                    <th scope="col">City</th>
                    <th scope="col">ZIP Code</th>
                    <th scope="col">Name</th>
                    <th scope="col">Company</th>
                    <th scope="col">Telepon</th>
                    <th scope="col">Email</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody> 
                  <% for(let data = 0; data < dataJsonAddresses.length; data++) { %>
                  <tr>
                    <td data-label=""><%= dataJsonAddresses[data].id %></td>
                    <td data-label=""><%= dataJsonAddresses[data].street %></td>
                    <td data-label=""><%= dataJsonAddresses[data].city %></td>
                    <td data-label=""><%= dataJsonAddresses[data].zipcode %></td>
                    <td data-label=""><%= dataJsonAddresses[data].nama %></td>
                    <td data-label=""><%= dataJsonAddresses[data].company %></td>
                    <td data-label=""><%= dataJsonAddresses[data].telp_number %></td>
                    <td data-label=""><%= dataJsonAddresses[data].email %></td>
                    <td><a href='/addresses_with_contact/edit/<%= dataJsonAddresses[data].id %>'>Edit</a></td>
                    <td><a href='/addresses_with_contact/delete/<%= dataJsonAddresses[data].id %>'>Delete</a></td> 
                    <!-- <td><a href='/contacts/<%= dataJsonAddresses[data].id %>/address'>Addresses</a></td> -->
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </form>
</body>
</html>