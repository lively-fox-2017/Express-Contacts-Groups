<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Halaman Contacts</title>
  </head>
  <body>
    <a href="contacts">Contacts</a>
    <a href="groups">Groups</a>
    <a href="profiles">Profile</a>
    <a href="addresses">Addresses</a>
    <table border="2px">
      <thead>
        <tr>
          <td>ID</td>
          <td>Name</td>
          <td>Company</td>
          <td>Telp</td>
          <td>Email</td>
          <td>Action</td>
        </tr>
      </thead>
    <tbody>
      <%dataContacts.forEach(row =>{ %>
        <tr>
          <td><%=row.id%></td>
          <td><%=row.name%></td>
          <td><%=row.company%></td>
          <td><%=row.telp_number%></td>
          <td><%=row.email%></td>
          <td>
            <a href="/contacts/addresses/<%=row.id%>">Address</a>
            <a href="/contacts/edit/<%=row.id%>">Edit</a>
            <a href="/contacts/delete/<%=row.id%>">Delete</a>
          </td>
        </tr>
      <%})%>
    </tbody>
  </table>
  </body>
</html>


<form action="/contacts" method="POST">
  Name:<br>
  <input type="text" name="name" placeholder="input nama">
  <br>
  Company:<br>
  <input type="text" name="company" placeholder="input company">
  <br>
  Telp:<br>
  <input type="text" name="telp_number" placeholder="input telp">
  <br>
  Email:<br>
  <input type="text" name="email" placeholder="input email">
  <br>
  <select class="" name="idContacts">
    <% dataContacts.forEach(row => { %>
     <option value="<%=row.id%>"><%=row.name%></option>
    <% })%>
  </select>
  <input type="submit" value="Submit">
</form>
