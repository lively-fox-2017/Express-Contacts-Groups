<% include partials/nav.ejs%>
<header class="header">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-12">
    <h1>Contacts</h1>
  </div>
</div>
</div>
</header>

<div class="main">
  <div class="cointainer">
    <div class="row">

    <table>
      <thead>
        <div class="thead">
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Company</th>
          <th>Telp_number</th>
          <th>Email</th>
        </tr>
      </thead>
      </thead>
      <tbody>
        <%data.forEach (row=> {%>
          <tr>
            <td><%= row.id%></td>
            <td><%=row.name%></td>
            <td><%=row.company%></td>
            <td><%=row.telp_number%></td>
            <td><%=row.email%></td>

            <td>
              <a href="contacts/viewAddresses/<%=row.id%>">View</a>
              <a href="contacts/edit/<%=row.id%>">EDIT</a>
              <a href="contacts/delete/<%=row.id%>">DELETE</a>
            </td>
          </tr>
        <%})%>
      </tbody>
</table>
</div>
</div>
<form class ="" action="/contacts" method="POST">
  <input id="name" type="text" name="name" placeholder="Name">
  <br>
  <input id= "company" type="text" name="company" placeholder="Company">
  <br>
  <input id="telp_number" type="text" name="telp_number" placeholder="Telp_number">
  <br>
  <input id="email" type="text" name="email" placeholder="Email">
  <br>
</div>
<div class="col-xs-4 col-md-2">
  <br>
  <input type="submit" value ="Submit">
  </div>
</form>
</body>
</html>
