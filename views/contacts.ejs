<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Halaman Contacts</title>
  </head>
  <body>
    <h1>Halaman contact</h1>
    <a href="/">Back to Home</a>
    <table border="1"="width:25%">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Company</th>
          <th>Telp_number</th>
          <th>Email</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <%dataContacts.forEach(rows =>{ %>
          <tr>
            <td><%=rows.id%></td>
            <td><%=rows.name%></td>
            <td><%=rows.company%></td>
            <td><%=rows.telp_number%></td>
            <td><%=rows.email%></td>
            <td>
              <a href="contacts/edit/<%=rows.id%>">Edit</a>
              <a href="contacts/delete/<%=rows.id%>">Delete</a>
            </td>
          </tr>
        <%})%>
      </tbody>
   </table>
   <br>
   <form action="/contacts" method="POST">
     <fieldset>
       <legend>Add Data Contacts:</legend>
       Name:<br>
       <input type="text" name="name" placeholder="Name">
       <br>
       Company:<br>
       <input type="text" name="company" placeholder="Company">
       <br>
       Telp_number:<br>
       <input type="text" name="telp_number" placeholder="Telp_number">
       <br>
       Email<br>
       <input type="text" name="email" placeholder="Email">
       <br><br>
       <input type="submit" value="SUBMIT">
     </fieldset>
   </form>
  </body>
</html>
