<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Contacts Data</title>
</head>

<body>
  <a href="/">back</a>
  <%
    if(hasOwnProperty('message')){
  %>
  <h2>  <%= message %> </h2>
    <%
  }
  %>
      <table style="width:50%" border='5'>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Company</th>
          <th>Telp Number</th>
          <th>Email</th>
          <th>Groups</th>
          <th colspan="3">Action</th>
        </tr>
        <%
      for(var i=0;i<dataRows.length;i++){
    %>
          <tr align="center">
            <td>
              <%= dataRows[i].id %>
            </td>
            <td>
              <%= dataRows[i].name %>
            </td>
            <td>
              <%= dataRows[i].company %>
            </td>
            <td>
              <%= dataRows[i].telp_number %>
            </td>
            <td>
              <%= dataRows[i].email %>
            </td>
            <td>
              <%= dataRows[i].name_of_group %>
            </td>
            <td><a href='/contacts/edit/<%= dataRows[i].id %>'>Edit</a></td>
            <td><a href="/contacts/delete/<%= dataRows[i].id %>">Delete</a></td>
            <td><a href="/contacts/adresses/<%= dataRows[i].id %>">Show Adresses</a></td>
          </tr>
          <%
    }
    %>
      </table>
      <br />
      <form action="/contacts" method="post">
        Name :<br>
        <input type="text" name="name" placeholder="Your Name">
        <br> Company:
        <br>
        <input type="text" name="company" placeholder="Your Company">
        <br> Telp Number:<br>
        <input type="text" name="telp_number" placeholder="Your Telp Number">
        <br> Email:
        <br>
        <input type="text" name="email" placeholder="Your Email Address">
        <br>
        <select name="group_id">
          <%
            for(var i =0;i<groupRows.length;i++){
          %>
          <option value="<%= groupRows[i].id %>"><%= groupRows[i].name_of_group %></option>
          <%
          }
          %>
        </select>
        <br />
        <input type="submit" value="Submit">
      </form>
      <br />
</body>

</html>
