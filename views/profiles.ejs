<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Halaman Profile</title>
  </head>
  <body>
    <h1>Halaman Profile</h1>
    <a href="/">Back to Home</a>
    <table border="1"="width:25%">
      <thead>
        <tr>
          <th>ID</th>
          <th>Contact ID</th>
          <th>Username</th>
          <th>Password</th>
          <th>Contact Name</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <%dataProfile.forEach(rows =>{ %>
          <tr>
            <td><%=rows.id%></td>
            <td><%=rows.idContacts%></td>
            <td><%=rows.username%></td>
            <td><%=rows.password%></td>
            <td><%=rows.name%></td>
            <td>
              <a href="profiles/edit/<%=rows.id%>">Edit</a>
              <a href="profiles/delete/<%=rows.id%>">Delete</a>
            </td>
          </tr>
        <%})%>
      </tbody>
   </table>
   <br>
   <form action="/profiles" method="POST">
     <fieldset>
       <legend>Add Data Profile:</legend>
       Username:<br>
       <input type="text" name="username" placeholder="Username">
       <br>
       Password:<br>
       <input type="text" name="password" placeholder="Password">
       <br>
       Contacts Name:<br>
       <select name="idContacts">
         <% dataContacts.forEach(rows =>{%>
           <option value="<%=rows.id%>"><%=rows.name%></option>
         <% })%>
       </select>
       <br><br>
       <input type="submit" value="SUBMIT">
     </fieldset>
   </form>
  </body>
</html>
