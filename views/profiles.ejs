<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Profiles Data</title>
</head>

<body>
  <a href="/">back</a>
  <table style="width:50%" border='5'>
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>Password</th>
      <th>Contact Name</th>
      <th colspan="2">Action</th>
    </tr>
    <%
      for(var i=0;i<dataRows.length;i++){
        var str = "";
    %>
      <tr align="center">
        <td><%= dataRows[i].id %></td>
        <td><%= dataRows[i].username %></td>
        <% for(var j=0;j<dataRows[i].password.length;j++){
          str+= '*';
        }%>
        <td><%= str %></td>
        <td><%= dataRows[i].name %></td>
        <td><a href='/profiles/edit/<%= dataRows[i].id %>'>Edit</a></td>
        <td><a href="/profiles/delete/<%= dataRows[i].id %>">Delete</a></td>
      </tr>
    <%
    }
    %>
  </table>
  <br />
  <form action="/profiles" method="post">
    Username :<br>
    <input type="text" name="username" placeholder="Username">
    <br>
    Password :<br>
    <input type="password" name="password" placeholder="Password">
    <br>
    Contacts :<br>
    <select name="contact_id">
      <%
        for(var i =0;i<contactsRows.length;i++){
      %>
      <option value="<%= contactsRows[i].id %>"><%= contactsRows[i].name %></option>
      <%
      }
      %>
    </select>
    <br>
    <input type="submit" value="Submit">
  </form>
  <br />
</body>

</html>
