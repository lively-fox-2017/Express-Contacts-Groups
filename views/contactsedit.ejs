<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Halaman Edit contact</h1>
    <a href="/">Back to Home</a>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Company</th>
          <th>Phone</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <%dataContacts.forEach( rows => { %>
          <tr>
            <td><%=rows.id%></td>
            <td><%=rows.name%></td>
            <td><%=rows.company%></td>
            <td><%=rows.telp_number%></td>
            <td><%=rows.email%></td>
          </tr>
        <% })%>
      </tbody>
    </table>
    <br>
    <form action="/contacts/edit/<%=dataContacts[0].id%>" method="POST">
      <fieldset>
        <legend>Edit Data Contacts:</legend>
        Name:<br>
        <input type="text" name="name" value="<%=dataContacts[0].name%>" placeholder="Name">
        <br>
        Company:<br>
        <input type="text" name="company" value="<%=dataContacts[0].company%>" placeholder="Company">
        <br>
        Telp_number:<br>
        <input type="text" name="telp_number" value="<%=dataContacts[0].telp_number%>" placeholder="Telp_number">
        <br>
        Email<br>
        <input type="text" name="email" value="<%=dataContacts[0].email%>" placeholder="Email">
        <br><br>
        <input type="submit" value="SUBMIT">
      </fieldset>
    </form>
  </body>
</html>
