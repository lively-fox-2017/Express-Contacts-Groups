<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Adress Detail</title>
  </head>
  <body>
    <a href="../../contacts">back</a>
    <p>ID :<%= dataRows[0].id %></p>
    <p>Name :<%= dataRows[0].name %></p>
    <table>
      <tr>
        <th>Street</th>
        <th>City</th>
        <th>ZipCode</th>
      </tr>
    <%
      for(var i = 0;i<adressRows.length;i++) {
    %>
      <tr>
        <td><%= adressRows[i].street %></td>
        <td><%= adressRows[i].city %></td>
        <td><%= adressRows[i].zipcode %></td>
      </tr>
    <%
      }
    %>
    </table>
    <form action="/contacts/adresses/<%=dataRows[0].id%>" method="post">
      Street :<br>
      <input type="text" name="street" placeholder="Street">
      <br>
      City :<br>
      <input type="text" name="city" placeholder="City">
      <br>
      Zipcode :<br>
      <input type="text" name="zipcode" placeholder="Zipcode">
      <br>
      <input type="submit" value="Submit">
    </form>
  </body>
</html>
