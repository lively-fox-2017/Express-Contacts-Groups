<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Groups Data</title>
</head>

<body>
  <a href="/">back</a>
  <table style="width:50%" border='5'>
    <tr>
      <th>ID</th>
      <th>Name of Group</th>
      <th>Contacts Involved</th>
      <th colspan="3">Action</th>
    </tr>
    <%
      for(var i=0;i<dataRows.length;i++){
    %>
      <tr align="center">
        <td><%= dataRows[i].id %></td>
        <td><%= dataRows[i].name_of_group %></td>
        <td><%= dataRows[i].name %></td>
        <td><a href='/groups/edit/<%= dataRows[i].id %>'>Edit</a></td>
        <td><a href="/groups/delete/<%= dataRows[i].id %>">Delete</a></td>
        <td><a href="/groups/assign/<%= dataRows[i].id %>">Asign Contacts</a></td>
      </tr>
    <%
    }
    %>
  </table>
  <br />
  <form action="/groups" method="post">
    Name of Group :<br>
    <input type="text" name="name_of_group" placeholder="Name of Group">
    <br>
    <input type="submit" value="Submit">
  </form>
  <br />
</body>

</html>
