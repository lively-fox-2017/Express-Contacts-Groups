<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Halaman Address</title>
  </head>
  <body>
    <a href="contacts">Contacts</a>
    <a href="groups">Groups</a>
    <a href="profiles">Profile</a>
    <a href="addresses">Addresses</a>
    <table border="2px">
      <thead>
        <tr>
          <td>ID</td>
          <td>Nama_Contacts</td>
          <td>Company</td>
          <td>Telp.No</td>
          <td>Email</td>
          <td>Street</td>
          <td>City</td>
          <td>Zipcode</td>
          <td>Action</td>
        </tr>
      </thead>
    <tbody>
      <%dataAddresses.forEach(row =>{ %>
        <tr>
          <td><%=row.id%></td>
          <td><%=row.name%></td>
          <td><%=row.company%></td>
          <td><%=row.telp_number%></td>
          <td><%=row.email%></td>
          <td><%=row.street%></td>
          <td><%=row.city%></td>
          <td><%=row.zipcode%></td>
          <td>
            <a href="/addresses/edit/<%=row.id%>">Edit</a>
            <a href="/addresses/delete/<%=row.id%>">Delete</a>
          </td>
        </tr>
      <%})%>
    </tbody>
    </table>
  </body>
</html>

<form action="/addresses" method="POST">
  Street :<br>
  <input type="text" name="street" placeholder="street">
  <br>
  City :<br>
  <input type="text" name="city" placeholder="city">
  <br>
  Zipcode :<br>
  <input type="text" name="zipcode" placeholder="zipcode">
  <br>
  Name : <br />
  <select class="" name="idContacts">
    <% dataContacts.forEach(row => { %>
     <option value="<%=row.id%>"><%=row.name%></option>
    <% })%>
  </select>
  <input type="submit" value="Submit">
</form>
