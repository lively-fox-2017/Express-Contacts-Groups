<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Adresses Data</title>
</head>

<body>
  <a href="/">back</a>
  <table style="width:50%" border='5'>
    <tr>
      <th>ID</th>
      <th>Street</th>
      <th>City</th>
      <th>Zipcode</th>
      <th>Contacts Name</th>
      <th colspan="2">Action</th>
    </tr>
    <%
      for(var i=0;i<dataRows.length;i++){
    %>
      <tr align="center">
        <td><%= dataRows[i].id %></td>
        <td><%= dataRows[i].street %></td>
        <td><%= dataRows[i].city %></td>
        <td><%= dataRows[i].zipcode %></td>
        <td><%= dataRows[i].name %></td>
        <td><a href='/adresses/edit/<%= dataRows[i].id %>'>Edit</a></td>
        <td><a href="/adresses/delete/<%= dataRows[i].id %>">Delete</a></td>
      </tr>
    <%
    }
    %>
  </table>
  <br />
  <form action="/adresses" method="post">
    Street :<br>
    <input type="text" name="street" placeholder="Street">
    <br>
    City :<br>
    <input type="text" name="city" placeholder="City">
    <br>
    Zipcode :<br>
    <input type="text" name="zipcode" placeholder="Zipcode">
    <br>
    Contacts :<br>
    <select name="contact_id">
      <%
        for(var i =0;i<contactsRows.length;i++){
      %>
      <option value="<%= contactsRows[i].id %>"><%= contactsRows[i].name %></option>
      <%
      }
      %>
    </select>
    <input type="submit" value="Submit">
  </form>
  <br />
</body>

</html>
