<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit Adresses</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/dataTables.material.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/material-design-lite/1.1.0/material.min.css">
  </head>
  <body>
    <form action="/adresses/edit/<%= dataRows.id %>" method="post">
      Street :<br>
      <input type="text" name="street" placeholder="Street" value="<%= dataRows.street %>">
      <br>
      City :<br>
      <input type="text" name="city" placeholder="Street" value="<%= dataRows.city %>">
      <br>
      Zipcode :<br>
      <input type="text" name="zipcode" placeholder="Street" value="<%= dataRows.zipcode %>">
      <br>
      <select name="contact_id">
        <%
          for(var i =0;i<contactsRows.length;i++){
            var str = "";
            if(dataRows.Contact_ID == contactsRows[i].id){
              str = "selected";
            }
        %>
        <option value="<%= contactsRows[i].id %>" <%= str %> ><%= contactsRows[i].name %></option>
        <%
        }
        %>
      </select>
      <br />
      <input type="submit" value="Submit" class="btn waves-effect waves-light">
    </form>
    <!-- Compiled and minified JavaScript -->
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.material.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script>
      $(document).ready(function() {
        $('#example').DataTable();
      });
      $(document).ready(function() {
        $('select').material_select();
      });
    </script>
  </body>
</html>
